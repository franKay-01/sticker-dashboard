<body class="primary-background-color">
<!-- Logo -->
<div class="row header-top-spacing">

    <div class="columns large-12 small-12">

        <div class="row">

            <div class="columns large-8 small-12">
                <h4 class="primary-font beta-text">Add Sticker</h4>
            </div>
            <a id="signoutLink" onclick="logoutUser()">SIGN OUT</a>
            <p></p>
            <!--link to dashboard and stickers-->
            <%- include('../partials/links') %>
        </div>
    </div>
</div>
<!-- Logo -->

<div class="row">
    <div class="columns large-12 hide-for-small-only margin-top-60"></div>
</div>

<!--form goes here-->
<div class="detailsFormContainer">
    <form id="detailsForm" action="/uploads" enctype="multipart/form-data" method="post">

        <div id="left-col">
            <!--new feature for drag n drop-->
            <div class="droppableArea">
                <span id="word">Drag files here or click to upload</span>
                <div class="output" name="tfile"></div>
                <input type="hidden"  name="imgChange" id="imgChange"/>
            </div>
        </div>
        <div id="right-col">
            <input type="text" placeholder="Sticker Name" id="stname" name="stickername"/>
            <input type="text" placeholder="Local Name" id="lname" name="localname">
            <input type="text" placeholder="Category e.g funny, silly" id="categoryInput" name="cat"/>
            <button id="cancel" href="/dashboard">CANCEL</button>
            <button id="upload" type="submit">UPLOAD</button>
        </div>
        <span id="filename" name="filename">No file chosen</span>

    </form>
</div>

<!-- Body -->

