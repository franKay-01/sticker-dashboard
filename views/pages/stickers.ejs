<!--form goes here-->
<div class="container1">
    <form id="tform" enctype="multipart/form-data" action="/upload" method="post">
            <div id="left-col">
                <img id="add-img" src="#" />
            </div>
            <div id="right-col">
               <input type="text" placeholder="Sticker Name" id="stname" name="stickername" />
                <input type="text" placeholder="Local Name" id="lname" name="localname">
                <input type="text" placeholder=" Category e.g funny, jumpy" id="category" name="cat"/>
                <button id="cancel">CANCEL</button> <button id="upload" type="submit">UPLOAD</button>
            </div>
        <input type="file" id="filein" name="stickerfile"/>

        <!--<div class="small-4 large-4 columns"><img src="/public/assets/images/DXD.jpg"></div>-->
    </form>
    <!--new stuff for dragndrop-->
    <div id="dropbox">
        <span class="message">Drop images here to upload. <br /><i>(they will only be visible to you)</i></span>
    </div>

    <div class="preview done">

    <span class="imageHolder">
        <img src="" />
        <span class="uploaded"></span>
    </span>

        <div class="progressHolder">
            <div class="progress"></div>
        </div>

    </div>
    <!--new stuff for dragndrop-->
</div>

