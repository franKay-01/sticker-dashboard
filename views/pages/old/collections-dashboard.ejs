<body class="primary-background-color">

<div class="Rectangle">
    <img src="/public/assets/images/logo2.png"
         srcset="/public/assets/images/logo@2x.png 2x,/public/assets/images//logo@3x.png 3x" class="logo">
</div>

<img src="/public/assets/images/bar.png" srcset="img/bar@2x.png 2x,img/bar@3x.png 3x" class="bar">

<!-- Logo -->
<div class="row header-top-spacing">

    <div class="columns large-12 small-12">

        <div class="row">

            <div class="columns large-8 small-12">
                <h3 class="logo-text primary-font">Dashboard - Collections</h3>
            </div>
            <a id="signoutLink" onclick="logoutUser()">SIGN OUT</a>
            <p></p>
            <!--link to other pages-->
            <%- include('../partials/links') %>

            <div class="columns small-7 large-8">
                <a class="uplink" id="showCreateForm">  Create New Collection</a>
            </div>
        </div>
    </div>
</div>
<!-- Logo -->

<div id="hiddenCreateForm">
    <form id="collectionForm" action="/new_pack" method="post">
        <table>
            <th colspan="2" id="titles">
                CREATE NEW COLLECTION
                <span id='closeSign'>X</span>
            </th>
            <tr>
                <td>
                    <label>Enter collection name:</label>
                </td>
                <td>
                    <input type="text" placeholder="collection name" name="coll_name" id="collectionName"><br>
                </td>
            </tr>
            <tr>
                <td>
                    <button type="button" id="btnCancelCreateColl">CANCEL</button>
                </td>
                <td>
                    <button type="submit" id="btnCreateCollection">CREATE</button>
                </td>
            </tr>
        </table>
    </form>
</div>

<% include ../partials/collection-item %>

<div id="pageMask"></div>



<!-- Body -->

