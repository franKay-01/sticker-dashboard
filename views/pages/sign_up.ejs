<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign Up - G-Stickers</title>

    <% include ../partials/fav.ejs %>

    <link rel="stylesheet" href="/public/assets/css/foundation.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <!--<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>-->

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css">
    <link rel="stylesheet" type="text/css" href="/public/assets/vendor/slick/slick.css"/>
    <link rel="stylesheet" href="/public/assets/css/custom.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700,800,900" rel="stylesheet">
    <script src="/public/assets/js/functions.js"></script>

    <script src="https://npmcdn.com/parse/dist/parse.js"></script>

</head>

<body class="primary-background-color">
<!-- Body -->

<div class="grid-container">
    <!-- Logo -->
    <div class="medium-12 large-12">
        <center>
            <a href="/">
                <img src="/public/assets/images/G_logo.png"
                     srcset="/public/assets/images/G_logo@2x.png 2x,/public/assets/images/G_logo@3x.png 3x"
                     class="logo">
            </a>
        </center>
    </div>
    <!-- End of logo-->
    <% if (error.length > 0) { %>
    <div class="medium-12 large-12 error_card">
        <div style="text-align: center;font-size: 20px;">
            <%= error %>
        </div>
    </div>
    <% } %>
    <div class="medium-6 large-6">
        <center>
            <div class="sign_up_label">Sign Up</div>

            <div style="text-align: center;" class="sign_form">
                <form id="signForm" method="post" action="/signup" onsubmit="return checkForm(this);" >
                    <br>
                    <input type="text" class="_signup_textbox" placeholder="Name" name="name" id="name_field" required>
                    <label for="name" id="nameField"></label>
                    <!--<p id="tool"></p>-->
                    <br>
                    <input type="email" class="_signup_textbox" placeholder="Email" name="username" id="username" required>
                    <label for="username" id="user"></label>
                    <br>

                    <input type="password" class="_signup_textbox" placeholder="Password" name="password" id="password" required>
                    <label for="password" id="pwd"></label>

                    <br>
                    <input type="password" class="_signup_textbox" placeholder="Confirm Password"
                           name="confirm_password" id="confirm_password">
                    <label for="confirm_password" id="confirm"></label>
                    <br>

                    <input name="gender" type="radio" id="gender" value="Male" checked/>
                    <label for="gender" class="_label" style="color: #a46580 !important;">Male</label>

                    <input name="gender" type="radio" id="gender" value="Female"/>
                    <label for="gender" class="_label" style="color: #a46580 !important">Female</label>

                    <input class="with-gap" name="terms_policy" type="checkbox" id="terms_policy"/>

                    <span style="color: #ffffff">I accept</span>&nbsp;<a href="#" class="policy_label">Terms and Conditions</a>

                    <div id="policy"></div>


                    <br>
                    <button type="submit" class="btnSignUp">Sign up!</button>
                    <br><br>
                    <a href="/" class="_btnLogin">Login here</a>

                </form>
            </div>

        </center>
    </div>
</div>
<!-- Body -->

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js" type="application/javascript"/>
<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script>
<script type="text/javascript" src="/public/assets/vendor/slick/slick.min.js"></script>
<script type="text/javascript" src="/public/assets/js/custom.js">
</script>

</body>


</html>