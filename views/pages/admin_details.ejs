<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sticker Details - Cyfa</title>

    <% include ../partials/fav.ejs %>
    <link rel="stylesheet" href="/public/assets/css/foundation.min.css">

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css">
    <link rel="stylesheet" type="text/css" href="/public/assets/vendor/slick/slick.css"/>
    <link rel="stylesheet" href="/public/assets/css/custom.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700,800,900" rel="stylesheet">
    <!--parse js-->
    <script src="https://npmcdn.com/parse/dist/parse.js"></script>
    <!--<link rel = "stylesheet"-->
          <!--href = "https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/css/materialize.min.css">-->
    <script type = "text/javascript"
            src = "https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src = "https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/js/materialize.min.js">
    </script>

    <script>
        $(document).ready(function() {
            $('select').material_select();
        });
    </script>

</head>
<body class="primary-background-color">
<div class="grid-container">
    <div class="medium-12 large-12">
        <a href="/home">
            <img src="/public/assets/images/G_logo.png"
                 srcset="/public/assets/images/G_logo@2x.png 2x,/public/assets/images/G_logo@3x.png 3x" class="logo"
                 id="logo">
        </a>
        <a id="signoutLink" onclick="logoutUser()">LOGOUT</a>

    </div>
    <div id="pageMask"></div>
    <span class="medium-12 large-12 welcome_post"><b>Review <%= sticker.get("stickerName") %> Sticker</b></span>

    <div class="grid-x grid-margin-x" id="opaqueDiv">
        <div class="medium-3 large-3 cell login_card">
            <div class="card_head_position">
                <div class="stats">Menu</div>
                <div><a class="_stickers" href="/home">Home</a></div>
                <div><a class="_stickers_packs" href="/categories">Categories</a></div>
            </div>
        </div>
        <form id="review_form" action="/review_sticker/<%= sticker.id %>/<%= pack_id %>" enctype="multipart/form-data"
              method="post">
            <div class="grid-x grid-margin-x">
                <div class="medium-6 large-5 cell">
                    <div class="droppableArea">
                        <div class="output" name="tfile"></div>
                        <img id="im1" name="im1" style="width: 300px; height: 300px;" src="<%= sticker.get("uri").url() %>">
                    </div>
                </div>
                <div class="medium-6 large-5 cell">
                    <label class="update_label">Sticker Name:</label> <input placeholder="Sticker Name" class="box_2"
                                                                             name="stickerName"
                                                                             value="<%= sticker.get("stickerName") %>" disabled>


                    <label class="update_label">Local Name:</label> <input placeholder="Local Name" class="box_2"
                                                                           name="localname"
                                                                           value="<%= sticker.get("localName") %>" disabled>

                    <label class="update_label">Category:</label>
                    <input placeholder="category e.g funny, silly"
                           id="categoryInput" name="category"
                           value="<%= sticker.get("categories") %>" disabled>
                    <input type="text" name="category_name" id="cat" style="display: none">

                    <div class = "row">
                        <select class="input-field" name="review_field" multiple>
                            <option value = "" disabled selected>&nbsp;Select Field</option>
                            <option value="all">ALL</option>
                            <option value="name">NAME</option>
                            <option value="sticker">STICKER</option>
                            <option value="category">CATEGORY</option>
                        </select>
                    </div>

                    <textarea class="box_2 validate" placeholder="Review description"
                              name="review_text" required="" aria-required="true"></textarea><br>

                    <div>
                        <input name="flagged" type="radio" id="flagged1" value="2"/>
                        <label for="flagged1" class="_label_review">Approve</label>

                        <input name="flagged" type="radio" id="flagged2" value="1"/>
                        <label for="flagged2" class="_label_review">Flag</label>
                    </div><br>
                </div>
                <div class="medium-12 large-12 cell">
                    <center>
                        <a href="/pack/<%= pack_id %>" class="cancel_btn">Cancel</a>

                        <button class="update" type="submit">Submit Review</button>
                    </center>
                </div>
            </div>
        </form>
    </div>


    <%- include('../partials/footer') %>

</div>

</body>
