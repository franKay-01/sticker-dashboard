<body class="primary-background-color" style="background: white">
<!-- Body -->

<div class="grid-container">

    <div class="grid-x grid-margin-x">
        <div class="medium-12 large-12">
            <center>
                <a href="/home">
                    <img src="/public/assets/images/G_logo.png"
                         srcset="/public/assets/images/G_logo@2x.png 2x,/public/assets/images/G_logo@3x.png 3x"
                         class="logo">
                </a>
            </center>
        </div>
        <div class="medium-12 large-12">
            <div style="background-color: white;margin: 30px 100px auto;">
                <center>
                    <h1 style="color: #0a0a0a;font-size: 2rem !important;">Change Your Password!</h1>
                </center>
                <!-- Form to allow user login-->
                <form action="/set_password" method="post">
                    <fieldset>
                        <center>
                            <input style="font-size: 2rem !important; width: 500px"
                                   id="forgotten_password" placeholder="New Password"
                                   type="password" tabindex="1" name="new_password">
                        </center>
                        <center>
                            <input style="font-size: 2rem !important; width: 500px"
                                   id="forgotten_password" placeholder="Confirm Password"
                                   type="password" tabindex="1" name="confirm_password">
                        </center>
                        <br><br>
                        <center>
                            <button name="reset_password" type="submit" id="btnForgotPass" data-submit="...Sending">Set Password
                            </button>
                        </center>
                    </fieldset>
                </form>
            </div>
        </div>
        <!-- End of form-->
    </div>
</div>


