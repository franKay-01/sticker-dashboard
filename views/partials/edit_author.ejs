<form id="stickerForm" action="/sticker/edit/<%= author.id %>" method="post">
    <div class="grid-x grid-margin-x">
        <div class="medium-6 large-5 cell">
            <div class="droppableArea">
                <div class="output" name="tfile"></div>
                <p class="title">&nbsp; <i class="fa fa-circle" aria-hidden="true"></i> &nbsp;Authors</p>
            </div>
        </div>
        <div class="medium-6 large-5 cell">
            <label class="update_label">Author Name:</label><br>
            <input placeholder="Sticker Name" class="box_2" name="stickerName"
                   style="width: 100%; margin-bottom: 25px;"
                   value="<%= author.get("name") %>"><br>
            <!--if new img has been uploaded, set value to true-->

            <label class="update_label">Author Email:</label><br>
            <input placeholder="Sticker Name" class="box_2" name="stickerName"
                   style="width: 100%; margin-bottom: 25px;"
                   value="<%= author.get("email") %>"><br>

            <label class="update_label">Author Social Media Handles:</label><br>

                <% let arraySize = author.get("socialHandles").length %>
                <% for (let i = 0; i < arraySize; i++){ %>
                <input placeholder="Social Handles" class="box_2" name="socialMedia" style="width: 100%; margin-bottom: 25px;"
                       value="<%= author.get("socialHandles") %>"><br><li> <%= author.get("socialHandles")[i] %></li>
                <% } %>

        </div>
        <div class="medium-12 large-12 cell" style="margin-top: 30px">
            <center>
                <a href="/authors" class="cancel_btn">Back</a>

                <button class="update" type="submit">Update</button>
            </center>
        </div>
    </div>
</form>

