<form id="stickerForm" action="/author/edit/<%= author.id %>" method="post" style="width: 70% !important;">
    <div class="grid-x grid-margin-x">
        <div class="medium-6 large-5 cell">
            <div class="droppableArea">
                <div class="output" name="tfile"></div>
                <i class="fa fa-user fa-5x" style="color: palevioletred;margin-top: 85px;font-size: 150px !important;"
                   aria-hidden="true"></i>
            </div>
        </div>
        <div class="medium-6 large-5 cell">
            <label class="update_label">Author Name:</label><br>
            <input placeholder="Sticker Name" class="box_2" name="authorName"
                   style="width: 100%; margin-bottom: 25px;"
                   value="<%= author.get("name") %>"><br>
            <!--if new img has been uploaded, set value to true-->

            <label class="update_label">Author Email:</label><br>
            <input placeholder="Sticker Name" class="box_2" name="authorEmail"
                   style="width: 100%; margin-bottom: 25px;"
                   value="<%= author.get("email") %>"><br>

            <label class="update_label">Author Phone:</label><br>
            <input placeholder="Sticker Name" class="box_2" name="authorNumber"
                   style="width: 100%; margin-bottom: 25px;"
                   value="<%= author.get("phone") %>"><br>

            <label class="update_label">Author Social Media Handles:</label><br>

            <div id="lists">
                <% let arraySize = author.get("socialHandles").length %>
                <% for (let i = 0; i < arraySize; i++){ %>
                <input placeholder="Social Handles" class="box_2" name="socialMedia[]" id="list" style="width: 100%; margin-bottom: 25px;" value="<%= author.get("socialHandles")[i] %>"><br>

                <% } %>
                <a href="#" id="addList"><i class="fa fa-plus-circle" style="color: palevioletred !important;" aria-hidden="true"></i></a>
            </div>

        </div>
        <div class="medium-12 large-12 cell" style="margin-top: 30px">
            <center>
                <a href="/authors" class="cancel_btn">Back</a>

                <button class="update" type="submit">Update</button>
            </center>
        </div>
    </div>
</form>

