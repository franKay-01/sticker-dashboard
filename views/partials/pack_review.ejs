
<form id="review_form" action="/review_pack/<%= id %>" method="post">
    <div class="grid-x grid-margin-x">
        <div class="medium-6 large-5 cell">
            <div class="droppableArea">
                <div class="output" name="tfile"></div>
                <img id="im1" name="im1" style="width: 100%; height: 100%;" src="<%= art_work.url() %>">
            </div>
        </div>
        <div class="medium-6 large-5 cell">
            <label class="update_label">Pack Name:</label> <input placeholder="Sticker Name" class="box_2"
                                                                     name="stickerName"
                                                                     value="<%= packName %>" disabled>

            <!--if new img has been uploaded, set value to true-->
            <input type="hidden" id="imgChange" name="imgChange" value="false">

            <label class="update_label">Owner's NAME && ID:</label> <input placeholder="Local Name" class="box_2"
                                                                   name="localname"
                                                                   value="<%= owner %> === <%= owner_id%>" disabled>
            <label class="update_label">Pack Description:</label> <input placeholder="Local Name" class="box_2"
                                                                   name="localname"
                                                                   value="<%= description %>" disabled>
            <textarea class="box_2 validate" placeholder="Review description"
                      name="review_text" required="" aria-required="true"></textarea><br>

            <div>
            <input name="approved" type="radio" id="approved1" value="2"/>
            <label for="approved1" class="_label_review">Approved</label>

            <input name="approved" type="radio" id="approved2" value="1"/>
            <label for="approved2" class="_label_review">Declined</label>
            </div>
        </div>
        <div class="medium-12 large-12 cell" style="margin-top:10%;">
            <center>
                <a href="/pack/<%= id %>" class="cancel_btn">Cancel</a>
                <button class="update" type="submit">Update</button>
            </center>
        </div>
    </div>
</form>
