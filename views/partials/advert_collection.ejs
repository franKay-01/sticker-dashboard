<!--Display Collections from parse-->
<% if (adverts.length === 0){ %>
<% } else { %>
<% adverts.forEach(function(item, index) { %>

<div class="medium-3 large-3 cell icons">
    <a href="/advert_details/<%= item.advert.id %>">
        <% if (item.image !== ""){ %>
        <center>
            <img src="<%= item.image %>" style="height: 250px">
        </center>
        <div class="name_tag"><p class="pack_name_text"><%= item.advert.get("title") %></p></div>
        <% } else { %>
        <center>
            <p class="none" style="margin: 145px 90px auto;"><b>No Artwork</b></p>
        </center>
        <div class="name_tag"><p class="pack_name_text"><%= item.advert.get("title") %></p></div>
        <% } %>
    </a>

</div>


<% }); %>
<% _adverts.forEach(function (item, index) { %>

<div class="medium-3 large-3 cell icons">
    <a href="/advert_details/<%= item.id %>">
        <center>
            <p class="none" style="margin: 145px 90px auto;"><b>No Artwork</b></p>

        </center>
        <div class="name_tag"><p class="pack_name_text"><%= item.get("title") %></p></div>

    </a>

</div>

<% }) %>

<% } %>