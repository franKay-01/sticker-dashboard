<form id="detailsForm" action="/product/edit/<%= product.id %>" enctype="multipart/form-data" method="post">
    <div class="grid-x grid-margin-x">
        <div class="medium-6 large-5 cell">
            <div class="droppableArea">
                <div class="output" name="tfile"></div>
                <% if (product.get("artwork") === "undefined" || product.get("artwork") === undefined){ %>
                <center>
                    <p class="none" style="margin: 145px 90px auto;"><b>No Artwork</b></p>
                </center>
                <% } else { %>

                <img class="pack_artwork" id="im1" name="im1" src="<%= product.get("artwork").url() %>">

                <% } %>
            </div>
        </div>
        <div class="medium-6 large-6 cell">
            <label class="update_label">Product Name:</label>
            <input placeholder="Pack Name" class="box_2" name="name"
                   value="<%= product.get("name") %>" style="margin-bottom: 35px !important;">

            <!--if new img has been uploaded, set value to true-->
            <input type="hidden" id="imgChange" name="imgChange" value="false">

            <label class="update_label">Product Decsription:</label>
            <textarea class="box_2 validate" name="description" required="" aria-required="true"
                      style="margin-bottom: 35px !important;"><%= product.get("description") %></textarea><br>

            <label class="update_label">Android Product ID:</label>
            <input type="text" placeholder="Android Product ID" name="android" class="box_2"
                   style="margin-bottom: 35px !important;"
                   value="<%= product.get("productId").android %>">

            <label class="update_label">IOs Product ID:</label>
            <input type="text" placeholder="IOs Product ID" name="ios" class="box_2"
                   style="margin-bottom: 35px !important;"
                   value="<%= product.get("productId").ios %>">

            <table>
                <tr>
                    <td width="10%">
                        <p style="color: #a46580 !important;">Android:</p>
                         <div class="row" style="width: 150px !important;">
                         <select class="input-field validate" name="ios_price">
                             <option value="" disabled selected>&nbsp;Price Tag(iOS)</option>
                            <option value="0.99">GH₵ 0.99</option>
                            <option value="1.99">GH₵ 1.99</option>
                            <option value="2.99">GH₵ 2.99</option>
                            <option value="3.99">GH₵ 3.99</option>
                            <option value="4.99">GH₵ 4.99</option>
                            </select>
                         </div>
                    </td>
                    <td width="10%">
                        <p style="color: #a46580 !important;">iOS:</p>
                        <div class="row" style="width: 150px !important;">
                        <select class="input-field validate" name="android_price">
                            <option value="" disabled selected>&nbsp;Price Tag(Android)</option>
                            <option value="0.99">GH₵ 0.99</option>
                            <option value="1.99">GH₵ 1.99</option>
                            <option value="2.99">GH₵ 2.99</option>
                            <option value="3.99">GH₵ 3.99</option>
                            <option value="4.99">GH₵ 4.99</option>
                        </select>
                        </div>
                    </td>
                </tr>
            </table>


            <br>
            <label class="update_label">Add Pack Artwork:</label>
            <input style="color: #a46580;" id="art" name="art" type="file"><br>

        </div>
        <div class="medium-12 large-12 cell">
            <center>
                <a href="/product/<%= product.id %>" class="cancel_btn">Back</a>
                <button class="update" type="submit">Update</button>
            </center>
        </div>
    </div>
</form>

