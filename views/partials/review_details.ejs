<div id="review_form">
    <div class="grid-x grid-margin-x">
        <div class="medium-6 large-5 cell">
            <div class="droppableArea">
                <div class="output" name="tfile"></div>
                <% if (item.get("type") === 0){ %>

                <img style="width: 255px;margin-left: 30px;"
                     src="https://cryptic-waters-41617.herokuapp.com/public/assets/images/packs.png">

                <% } else { %>
                <img class="btn_pack_icon" style="height: 255px !important;"
                     src="https://cryptic-waters-41617.herokuapp.com/public/assets/images/review_sticker.png">

                <% } %>
            </div>
        </div>
        <div class="medium-6 large-5 cell">
            <% if (item.get("type") === 0){ %>

            <label class="update_label">Pack Name:</label> <input placeholder="Sticker Name" class="box_2"
                                                                  name="PackName"
                                                                  value="<%= reviews.name %>" disabled>
            <% } else { %>

            <label class="update_label">Sticker Name:</label> <input placeholder="Sticker Name" class="box_2"
                                                                     name="stickerName"
                                                                     value="<%= reviews.name %>" disabled>
            <% } %>
            <!--if new img has been uploaded, set value to true-->
            <label class="update_label">Reviewer's Name:</label> <input placeholder="Sticker Name" class="box_2"
                                                                    name="stickerName"
                                                                    value="<%= reviews.reviewer_name %>" disabled>

            <label class="update_label">Comments :</label><textarea class="box_2 validate" name="comments" value="<%= reviews.comments%>"></textarea>
            <label class="update_label">Status</label> <input placeholder="Sticker Name" class="box_2"
                                               name="stickerName"
                                               value="<%= reviews.approved %>" disabled>
            <label class="update_label">Field Reviewed</label> <input placeholder="Sticker Name" class="box_2"
                                                              name="stickerName"
                                                              value="<%= reviews.review_field %>" disabled>

        </div>
    </div>
</div>