<!-- Cards -->
<form id="detailsForm" action="/update/<%= username %>" enctype="multipart/form-data" method="post">
    <div class="grid-x grid-margin-x">
        <div class="medium-6 large-5 cell">
            <div class="droppableArea">
                <div class="output" name="tfile"></div>
                <img id="im1" name="im1" style="width: 100%; height: 100%;" src="<%= profile %>">
            </div>
        </div>
        <div class="medium-6 large-5 cell">
            <label class="update_label">Name:</label> <input placeholder="Sticker Name" class="box_2"
                                                                     name="stickerName"
                                                                     value="<%= username %>">

            <!--if new img has been uploaded, set value to true-->
            <input type="hidden" id="imgChange" name="imgChange" value="false">

            <label class="update_label">Email:</label> <input placeholder="Local Name" class="box_2"
                                                                   name="localname"
                                                                   value="<%= email %>">
        </div>
        <div class="medium-12 large-12 cell" style="margin-top:10%;">
            <center>
                <a href="/pack/<%= pack_id %>" class="cancel_btn">Cancel</a>
                <button type="button" class="cancel_btn delbtn" data-id="<%= sticker.id %>"
                        value="<%= sticker.get("name") %>">Delete</button>
                <button class="update" type="submit">Update</button>
            </center>
        </div>
    </div>
</form>
