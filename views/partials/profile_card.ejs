<!-- Cards -->
<form id="detailsForm" action="/update_user" enctype="multipart/form-data" method="post">
    <div class="grid-x grid-margin-x">
        <% if (profile.get("uri") === "undefined" || profile.get("uri") === undefined) { %>
        <div class="medium-6 large-5 cell">
            <div class="drop" style="height: 200px">
                <div class="cont">
                    <i class="fa fa-cloud-upload"></i>
                    <div class="tit">
                        Drag & Drop || CLICK
                    </div>
                </div>

                <output id="filesList"></output>
                <input id="files" name="im1" type="file"/>
            </div>
        </div>
        <% } else { %>
        <div class="medium-6 large-5 cell">
            <div class="droppableArea">
                <div class="output" name="tfile"></div>
                <img class="user_profile" src="<%= profile.get("uri").url() %>">
            </div>

            <input type="text" value="true" name="imgChange" hidden>
        </div>
        <% } %>
        <div class="medium-6 large-5 cell">
            <label class="update_label">Name:</label> <input placeholder="Sticker Name" class="box_2" name="name"
                                                             value="<%= username %>">

            <!--if new img has been uploaded, set value to true-->
            <input type="hidden" id="imgChange" name="imgChange" value="false">

            <label class="update_label">Email:</label> <input placeholder="Local Name" class="box_2" name="email"
                                                              value="<%= email %>" readonly><br>
            <hr>
            <div> Social Media Handles</div>
            <br>
            <% if (links.length > 0) {%>
            <% links.forEach(function(items) { %>

            <%if (items.get("type") === 1){%>
            <label style="color: #00b0ff !important;"><i class="fa fa-facebook-square fa-2x prefix"
                                                         aria-hidden="true"></i> &nbsp; <b>Facebook</b></label>
            <input id="icon_prefix" type="text" placeholder="@G-stickers" name="facebook" value="<%= items.get("link")%>" class="box_2">

            <%}%>

            <%if (items.get("type") === 2){%>

            <label style="color: #00b0ff !important"><i class="fa fa-twitter-square fa-2x prefix"
                                                        aria-hidden="true"></i> &nbsp; <b>Twitter</b></label>
            <input id="icon_prefix" type="text" placeholder="@G-stickers" name="twitter" value="<%= items.get("link")%>" class="box_2">

            <%}%>

            <%if (items.get("type") === 3){%>

            <label style="color: #a46580 !important"><i class="fa fa-instagram fa-2x prefix" aria-hidden="true"></i>
                &nbsp; <b>Instagram</b></label>
            <input id="icon_prefix" type="text" placeholder="@G-stickers" value="<%= items.get("link")%>" name="instagram" class="box_2">
            <%}%>
            <% }) %>

            <%} else {%>

            <center>
                <p class="none"><b>No Social Media Handle. Click below to add</b></p>
            </center>

           <%}%>

            <button class="update" onclick="reveal()" type="button" style="font-size: 17px !important;margin-top: 15px !important;">Add/Update
                Handle
            </button>

            <script>
                function reveal() {

                    document.getElementById("handles").style.display = "block";

                }
            </script>

            <div id="handles" style="width: 300px !important;" hidden>
                <select name="type" required="">
                    <option value="" disabled selected>Choose your platform</option>
                    <option value="1">Facebook</option>
                    <option value="2">Twitter</option>
                    <option value="3">Instagram</option>
                </select>
                <input id="icon_prefix" type="text" style="width: 300px !important;" placeholder="Handle" name="handles"
                       class="box_2">
            </div>
        </div>


        <div class="medium-12 large-12 cell">
            <center>
                <a href="/" class="cancel_btn">Cancel</a>

                <button class="update" type="submit">Update</button>
            </center>
        </div>
    </div>
</form>

