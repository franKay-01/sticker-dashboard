<!-- Cards -->
<form id="detailsForm" action="/update/<%= username %>" enctype="multipart/form-data" method="post">
    <div class="grid-x grid-margin-x">
        <div class="medium-6 large-5 cell">
            <div class="droppableArea">
                <div class="output" name="tfile"></div>
                <img src="<%= profile %>">
            </div>
        </div>
        <div class="medium-6 large-5 cell">
            <label class="update_label">Name:</label> <input placeholder="Sticker Name" class="box_2" name="stickerName" value="<%= username %>">

            <!--if new img has been uploaded, set value to true-->
            <input type="hidden" id="imgChange" name="imgChange" value="false">

            <label class="update_label">Email:</label> <input placeholder="Local Name" class="box_2" name="localname" value="<%= email %>">
            <hr>
            <div> Social Media Handles</div>
            <label><i class="fa fa-facebook-square fa-2x prefix" aria-hidden="true"></i></label>
            <input id="icon_prefix" type="text" placeholder="@G-stickers" class="box_2">
        </div>
        <div class="medium-12 large-12 cell" style="margin-top:10%;">
            <center>
                <a href="/" class="cancel_btn">Cancel</a>

                <button class="update" type="submit">Update</button>
            </center>
        </div>
    </div>
</form>
