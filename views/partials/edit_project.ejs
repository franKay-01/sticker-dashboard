<form id="detailsForm" action="/project/edit/<%= project.id %>" enctype="multipart/form-data" method="post">
    <div class="grid-x grid-margin-x">
        <div class="medium-6 large-5 cell">
            <div class="droppableArea">
                <div class="output" name="tfile"></div>
                <% if (project.get("uri") === "undefined" || project.get("uri") === undefined){ %>
                <center>
                    <p class="none"><b>No Artwork</b></p>
                </center>
                <% } else { %>

                <img class="pack_artwork" id="im1" name="im1" src="<%= project.get("uri").url() %>">

                <% } %>
            </div>
        </div>
        <div class="medium-6 large-6 cell">
            <label class="update_label">Project Name:</label>

            <input placeholder="Project Name" class="box_2" name="projectName"
                   value="<%= project.get("name") %>" required style="margin-bottom: 35px !important;">

            <label class="update_label">Version:</label>
            <input type="number" class="box_2" name="projectVersion" required value="<%= project.get("version") %>">


            <label class="update_label">Add Project Artwork:</label>
            <input style="color: #a46580;" id="art" name="art" type="file"><br>

            <a href="#" id="showList" class="update_label"
               style="color: #148614 !important; font-weight:600 !important;">Settings</a>
            <div style="display: none" id="showSetting">
                <table>
                    <tr>
                        <td>
                            <p class="update_label">Title:</p>
                        </td>
                        <td>
                            <span style=" margin:0px 15px auto;">
                                <input style="width:100px;" id="title_color" value="<%= project.get("title")%>"/>

                                <span id="cpEvent1" class="demoPanel" style="width: 170px;"></span>
                            </span>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <p class="update_label">Text:</p>
                        </td>
                        <td>
                            <span style=" margin:0px 15px auto;">
                                <input style="width:100px;" id="text_color" value="<%= project.get("text")%>"/>

                                <span id="cpEvent1" class="demoPanel" style="width: 170px;"></span>
                            </span>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <p class="update_label">Button:</p>
                        </td>
                        <td>
                            <span style=" margin:0px 15px auto;">
                                <input style="width:100px;" id="button_color" value="<%= project.get("button")%>"/>

                                <span id="cpEvent1" class="demoPanel" style="width: 170px;"></span>
                            </span>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <p class="update_label">Card:</p>
                        </td>
                        <td>
                            <span style=" margin:0px 15px auto;">
                                <input style="width:100px;" id="topcard_color" value="<%= project.get("title").topColor%>"/>

                                <span id="cpEvent1" class="demoPanel" style="width: 170px;"></span>
                            </span>
                        </td>
                        <td>
                            <span style=" margin:0px 15px auto;">
                                <input style="width:100px;" id="bottomcard_color" value="<%= project.get("title").bottomColor%>"/>

                                <span id="cpEvent1" class="demoPanel" style="width: 170px;"></span>
                            </span>
                        </td>
                    </tr>
                </table>
                <a href="#" id="closeList" class="update_label" style="color: #148614 !important; font-weight:600 !important;">Hide</a>
            </div>

            <input type="text" name="title" id="title" value="#a46580" hidden/>
            <input type="text" name="text" id="text" value="#a46580" hidden/>
            <input type="text" name="button" id="button" value="#a46580" hidden/>
            <input type="text" name="topColor" id="topCard" value="#a46580" hidden/>
            <input type="text" name="bottomColor" id="bottomCard" value="#a46580" hidden/>

        </div>
        <div class="medium-12 large-12 cell">
            <center>
                <a href="/projects" class="cancel_btn">Back</a>
                <button class="update" type="submit">Update</button>
            </center>
        </div>
    </div>
</form>
