<!--Display Collections from parse-->
<%if ( collections.length === 0 ){%>
<div class="medium-3 large-3 cell icons">
    <p class="none">No Packs</p>
    <div class="name_tag"><p class="pack_name_text">No Packs</p></div>

</div>
<%}else {%>
<% collections.forEach(function(item, index) { %>

<div class="medium-3 large-3 cell icons ">
    <a class="card-zoom" href="/pack/<%= item.id %>">
    <%if (item.get("packType") === 0){%>
    <i class="fa fa-circle display_icons" id="circle" style="color: #ffb12f;" aria-hidden="true"></i>
    <%}else if (item.get("packType") === 1){%>
    <i class="fa fa-circle display_icons" id="circle" style="color: #28ff7e;" aria-hidden="true"></i>
    <%} else if (item.get("packType") === 2) {%>
    <i class="fa fa-circle display_icons" id="circle" style="color: #203f80;" aria-hidden="true"></i>
    <%}%>

        <% if (item.get("artwork") === "undefined" || item.get("artwork") === undefined){ %>
        <center>
            <p class="none" style="margin: 145px 90px auto;"><b>No Artwork</b></p>
        </center>
        <div class="name_tag"><p class="pack_name_text"><%= item.get("name") %></p></div>
        <% } else {%>
            <center>
                <img class="pack_artwork" src="<%= item.get("artwork").url() %>" style="height: 250px">
            </center>
            <div class="name_tag"><p class="pack_name_text"><%= item.get("name") %></p></div>
        <%}%>
    </a>

</div>

<% }); %>
<%}%>