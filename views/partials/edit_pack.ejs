<form id="detailsForm" action="/update_pack/<%= pack.id %>" method="post">
    <div class="grid-x grid-margin-x">
        <div class="medium-6 large-5 cell">
            <div class="droppableArea">
                <div class="output" name="tfile"></div>
                <img id="im1" name="im1" style="width: 100%; height: 100%;" src="<%= pack.get("art_work").url() %>">
            </div>
        </div>

        <div class="medium-6 large-5 cell">

            <label class="update_label">Pack Name:</label>
            <input placeholder="Sticker Name" class="box_2"
                   name="pack_name"
                   value="<%= pack.get("pack_name") %>">
            <label class="update_label">Pack Name:</label>
            <input placeholder="Sticker Name" class="box_2"
                   name="pack_description"
                   value="<%= pack.get("pack_description") %>">
            <input placeholder="Sticker Name" class="box_2"
                   name="keyword"
                   value="<%= pack.get("keyword") %>">
            <label class="update_label">Archive</label>
            <div style="margin-bottom: 10px">
                <input name="archive" type="radio" id="archive1" value="0">
                <label for="archive1" class="_label" style="color: #864f4f !important;">Yes</label>

                <input name="archive" type="radio" id="archive2" value="1">
                <label for="archive2" class="_label" style="color: #864f4f !important;">No</label>

            </div>
            <br>

        </div>
        <div class="medium-12 large-12 cell">
            <center>
                <a href="/review_details/<%= review_id %>" class="cancel_btn">Cancel</a>

                <button class="update" type="submit">Update</button>
            </center>
        </div>
    </div>
</form>
