<form id="detailsForm" action="/update_sticker/<%= sticker.id %>/<%= pack_id %>" method="post">
    <div class="grid-x grid-margin-x">
        <% if (sticker_details === undefined){ %>
        <div class="medium-6 large-5 cell">
            <div class="droppableArea">
                <div class="output" name="tfile"></div>
                <img id="im1" name="im1" style="width: 100%; height: 100%;" src="<%= sticker.get("uri").url() %>">
            </div>
        </div>
        <% }else { %>
        <div class="medium-6 large-5 cell">
            <div class="droppableArea" style="border: solid; color: red;">
                <div class="output" name="tfile"></div>
                <img id="im1" name="im1" style="width: 100%; height: 100%;" src="<%= sticker.get("uri").url() %>">
            </div>
            <!--<input type="file" name="im1">-->
            <div class="file-field input-field">
                <div class="btn">
                    <span><i class="fa fa-file-o"></i></span>
                    <input type="file">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
        </div>
        <% } %>

        <div class="medium-6 large-5 cell">
            <% if (name === undefined){ %>
            <label class="update_label">Sticker Name:</label>
            <input placeholder="Sticker Name" class="box_2"
                   name="stickerName"
                   value="<%= sticker.get("stickerName") %>">
            <% } else { %>
            <label class="update_label">Sticker Name:</label>
            <input placeholder="Sticker Name" class="box_2"
                   name="stickerName"
                   style="border: solid;color: red; border-bottom: 3px red solid !important;"
                   value="<%= sticker.get("stickerName") %>">
            <% } %>
            <!--if new img has been uploaded, set value to true-->
            <input type="hidden" id="imgChange" name="imgChange" value="false">

            <% if (category === undefined) { %>
            <label class="update_label">Category:</label>
            <input placeholder="category e.g funny, silly"
                   id="categoryInput" name="category"
                   value="<%= sticker.get("categories") %>" disabled>
            <input type="text" name="category_name" id="cat" style="display: none">

            <% } else { %>
            <label class="update_label">Category:</label>
            <input placeholder="category e.g funny, silly"
                   id="categoryInput" name="category"
                   style="border: solid;color: red; border-bottom: 3px red solid !important;"
                   value="<%= sticker.get("categories") %>" disabled>
            <input type="text" name="category_name" id="cat" style="display: none">

            <div class="row">
                <select class="input-field" name="categories[]" multiple>
                    <option value="" disabled selected>&nbsp;Add Categories</option>
                    <% if (categories.length === 0) { %>

                    <% } else { %>
                    <% categories.forEach(function(items) { %>
                    <option value="<%= items.get("name") %>"><%= items.get("name") %></option>
                    <% }) %>
                    <% } %>
                </select>
            </div>
            <% } %>
        </div>
        <div class="medium-12 large-12 cell">
            <center>
                <a href="/pack/<%= pack_id %>" class="cancel_btn">Cancel</a>
                <button type="button" class="cancel_btn delbtn" data-id="<%= sticker.id %>"
                        value="<%= sticker.get("name") %>">Delete
                </button>
                <button class="update" type="submit">Update</button>
            </center>
        </div>
    </div>
</form>
