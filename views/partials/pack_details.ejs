<form id="detailsForm" action="/update/<%= pack_details.id %>" method="post">
    <div class="grid-x grid-margin-x">
        <div class="medium-6 large-5 cell">
            <div class="droppableArea">
                <div class="output" name="tfile"></div>
                <img id="im1" name="im1" style="width: 100%; height: 100%;" src="<%= pack_details.get("art_work").url() %>">
            </div>
        </div>
        <div class="medium-6 large-5 cell">
            <label class="update_label">Sticker Name:</label><br>
            <input placeholder="Sticker Name" class="box_2" name="stickerName"
                   style="width: 100%; margin-bottom: 15px;"
                   value="<%= pack_details.get("pack_name") %>">

            <!--if new img has been uploaded, set value to true-->
            <input type="hidden" id="imgChange" name="imgChange" value="false">

            <label class="update_label">Local Name:</label><br>
            <input placeholder="Local Name" class="box_2" name="localname"
                   style="width: 100%; margin-bottom: 10px;"
                   value="<%= pack_details.get("pack_description") %>">

        </div>
        <div class="medium-12 large-12 cell">
            <center>
                <a href="/pack/<%= pack_details.id %>" class="cancel_btn">Cancel</a>
                <button class="update" type="submit">Update</button>
            </center>
        </div>
    </div>
</form>
