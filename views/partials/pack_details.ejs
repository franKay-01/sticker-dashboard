<form id="detailsForm" action="/pack_update/<%= pack_details.id %>" enctype="multipart/form-data" method="post">
    <div class="grid-x grid-margin-x">
        <div class="medium-6 large-5 cell">
            <div class="droppableArea">
                <div class="output" name="tfile"></div>
                <% if (pack_details.get("art_work") === "undefined" || pack_details.get("art_work") === undefined){ %>
                <center>
                <p class="none" style="margin: 145px 90px auto;"><b>No Artwork</b></p>
                </center>
                <% } else { %>

                <img class="pack_artwork" id="im1" name="im1" src="<%= pack_details.get("art_work").url() %>">

                <% } %>
            </div>
        </div>
        <div class="medium-6 large-6 cell">
            <label class="update_label">Pack Name:</label>
            <input placeholder="Pack Name" class="box_2" name="pack_name"
                   value="<%= pack_details.get("pack_name") %>" disabled style="margin-bottom: 35px !important;">

            <!--if new img has been uploaded, set value to true-->
            <input type="hidden" id="imgChange" name="imgChange" value="false">

            <label class="update_label">Pack Decsription:</label>
            <textarea class="box_2 validate" name="description" required="" aria-required="true" style="margin-bottom: 35px !important;"><%= pack_details.get("pack_description") %>
            </textarea><br>
            <label for="keyword" style="color: #a46580 !important;">Seperate Tags with comma (,)</label>
            <input type="text" class="box_2 validate" value="<%= pack_details.get("keyword") %>" placeholder="Smile,Angry,Sad" id="keyword"
                   name="keyword" style="margin-bottom: 35px !important;">

            <label class="update_label">Archive:</label>
            <div style="margin-bottom: 30px">
                <%= if (pack_details.get("archive") === true ){%>
                <input name="archive" type="radio" id="archive1" checked value="1"/>
                <label for="archive1" class="_label" style="color: #a46580 !important;">Yes</label>
                <%} else if (pack_details.get("pack_name") === false){%>
                <input name="archive" type="radio" id="archive2" checked value="0"/>
                <label for="archive2" class="_label" style="color: #a46580 !important">No</label>
                <%} else {%>
                <input name="archive" type="radio" id="archive1" value="1"/>
                <label for="archive1" class="_label" style="color: #a46580 !important;">Yes</label>

                <input name="archive" type="radio" id="archive2" checked value="0"/>
                <label for="archive2" class="_label" style="color: #a46580 !important">No</label>
                <%}%>

            </div>


            <label class="update_label">Add Pack Artwork:</label>
            <input style="color: #a46580;" id="art" name="art" type="file"><br>

        </div>
        <div class="medium-12 large-12 cell">
            <center>
                <a href="/pack/<%= pack_details.id %>" class="cancel_btn">Cancel</a>
                <button class="update" type="submit">Update</button>
            </center>
        </div>
    </div>
</form>
