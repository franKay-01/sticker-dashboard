<form id="detailsForm" action="/pack_update/<%= pack_details.id %>"  method="post">
    <div class="grid-x grid-margin-x">
        <div class="medium-6 large-5 cell">
            <div class="droppableArea">
                <div class="output" name="tfile"></div>
                <% if (pack_details.get("art_work") === "undefined" || pack_details.get("art_work") === undefined){ %>
                center>
                <p class="none" style="margin: 145px 90px auto;"><b>No Artwork</b></p>
                </center>
                <% } else { %>

                <img id="im1" name="im1" src="<%= pack_details.get("art_work").url() %>">

                <% } %>
            </div>
        </div>
        <div class="medium-6 large-5 cell">
            <label class="update_label">Pack Name:</label>
            <input placeholder="Pack Name" class="box_2" name="pack_name"
                   value="<%= pack_details.get("pack_name") %>" disabled>

            <!--if new img has been uploaded, set value to true-->
            <input type="hidden" id="imgChange" name="imgChange" value="false">

            <label class="update_label">Pack Decsription:</label>
            <textarea class="box_2 validate"
                      name="description" required="" aria-required="true">
                <%= pack_details.get("pack_description") %>
            </textarea><br>
            <label for="keyword">Seperate Tags with comma (,)</label>
            <input type="text" class="box_2 validate" placeholder="Smile,Angry,Sad" id="keyword"
                   name="keyword">

            <label for="flip-1">Archive:</label>
            <div class="switch">
                <label>
                    Off
                    <input type="checkbox" id="slider">
                    <span class="lever"></span>
                    On
                </label>
            </div>

            <% if (pack_details.get("art_work") === "undefined" || pack_details.get("art_work") === undefined){ %>

            <label class="update_label">Add Pack Artwork:</label>
            <input style="color: white;margin: 0px 130px;" id="art" name="art" type="file"><br>

            <% } %>

        </div>
        <div class="medium-12 large-12 cell">
            <center>
                <a href="/pack/<%= pack_details.id %>" class="cancel_btn">Cancel</a>
                <button class="update" type="submit">Update</button>
            </center>
        </div>
    </div>
</form>
